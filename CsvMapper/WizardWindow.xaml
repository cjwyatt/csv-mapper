<Window x:Class="CsvMapper.WizardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Csv Mapper" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <DockPanel>
            <Image
                DockPanel.Dock="Left"
                Source="assets/wizzard-side.png" />
            <Frame
                DockPanel.Dock="Right"
                VerticalAlignment="Top"
                HorizontalAlignment="Stretch"
                Height="Auto"
                Source="TestPage.xaml" />
        </DockPanel>
        <Border
            BorderThickness="0, 1, 0, 0"
            BorderBrush="#dddddd"
            Grid.Row="1">
            <Grid>
                <StackPanel
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        VerticalAlignment="Center"
                        Margin="0, 0, 10, 0"
                        Padding="12, 2"
                        Content="Cancel"/>
                    <Button
                        VerticalAlignment="Center"
                        Margin="0, 0, 10, 0"
                        Padding="12, 2"
                        Content="Next"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>